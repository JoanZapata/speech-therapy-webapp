# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
OPTIONS	/*url						controllers.Application.options(url)
GET     /                           controllers.Application.index()
GET		/activities					controllers.Application.activities()
GET		/activity					controllers.Application.activity(id: Long)
POST 	/activity					controllers.Application.addActivity()
GET 	/addTestActivity			controllers.Application.addTestActivity()